{
    "name": "cross_roads",
    "version": "1.3.0-dev",
    "description": "Need to cross the road without colliding with a moving vehicle.",
    "dependencies": {
        "easeljs": "^1.0.2",
        "preloadjs": "^1.0.1",
        "soundjs": "^1.0.1",
        "tweenjs": "^1.0.2"
    },
    "devDependencies": {
        "@types/createjs": "~0.0.29",
        "glob": "^7.1.3",
        "grunt": "~1.0.4",
        "grunt-contrib-clean": "~2.0.0",
        "grunt-contrib-copy": "~1.0.0",
        "grunt-contrib-cssmin": "~3.0.0",
        "http-server": "^0.11.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.16.4",
        "terser": "^3.17.0",
        "typescript": "~3.3.4000"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    },
    "scripts": {
        "dev": "npm-run-all --parallel dev:*",
        "dev:typescript": "tsc -w",
        "dev:update_libraries": "grunt update_libraries",
        "dev:server": "http-server -p 8000 --silent",
        "formatting:check": "prettier --check \"**/*.{html,css,json,js,ts,md}\"",
        "formatting:run": "prettier --write \"**/*.{html,css,json,js,ts,md}\"",
        "build": "grunt"
    }
}
